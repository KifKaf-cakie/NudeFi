# .env.example - Copy to .env and fill in your values

# Base Sepolia RPC URL - Use your own provider for production
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Smart contract deployment
PRIVATE_KEY=your_private_key_here
ETHERSCAN_API_KEY=your_etherscan_api_key

# Client side environment variables (prefix with NEXT_PUBLIC_)
NEXT_PUBLIC_BASE_RPC_URL=https://sepolia.base.org
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id
NEXT_PUBLIC_ALCHEMY_ID=your_alchemy_id
NEXT_PUBLIC_PLATFORM_REFERRER=your_wallet_address
NEXT_PUBLIC_TRADE_REFERRER=your_wallet_address
NEXT_PUBLIC_IPFS_GATEWAY_URL=https://ipfs.io/ipfs/

# Zora API (for production)
NEXT_PUBLIC_ZORA_API_KEY=your_zora_api_key

# IPFS storage services (optional)
PINATA_API_KEY=your_pinata_api_key
PINATA_API_SECRET=your_pinata_api_secret
